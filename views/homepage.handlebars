{{#each userInfo }}
<div class="home-blog">
  <div class="home-row ">
      <a class="home-text" href="/blog/{{id}}">{{title}}</a>
    <p class="home-text">Created by {{user.username}} on {{format_date date_created}}</p>
  </div>
  <p class="home-content">{{content}}</p>
  <button id="commentForm" class="login-button" data-displayCommentFormId="{{id}}">Comment</button>
{{#each comments}}
      <div class="comment">
        <p>{{commentCreator}} {{format_date date_created}}</p>
        <p class="comment-style">{{comment}}</p>
      </div>
    {{/each}}
</div>
<div id="displayCommentForm{{id}}">
</div>
{{/each}}

<script src="/js/comment.js"></script>